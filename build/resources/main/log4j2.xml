<Configuration status="WARN">
    <Properties>
        <Property name="log_path">/sanjeev.jha/Desktop/logs</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level ... [%t] [%c][%M(%L)] : %m%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!--logger for spring framework-->
        <Logger name="org.springframework" level="warn" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <!--logger for projects-->
        <Logger name="com.java.practice" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>

</Configuration>